@model List<AnagraficaViewModel>

@{
    ViewBag.Title = "Anagrafica";
}

<h1>Anagrafica persone multate</h1>

@if(Model.Count == 0)
{
    <h4>Non sono presenti persone registrate</h4>
}
else
{
    @foreach (AnagraficaViewModel anagrafica in Model)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Cognome</th>
                    <th scope="col">Codice fisclae</th>
                    <th scope="col">Indirizzo</th>
                    <th scope="col">Città</th>
                    <th scope="col">CAP</th>
                    <th scope="col">Tipo di Infrazione</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@anagrafica.Nome</td>
                    <td>@anagrafica.Cognome</td>
                    <td>@anagrafica.CodiceFiscale</td>
                    <td>@anagrafica.Indirizzo</td>
                    <td>@anagrafica.Citta</td>
                    <td>@anagrafica.Cap</td>
                    <td>@anagrafica.Verbale</td>
                </tr>
            </tbody>
        </table>
    }
}