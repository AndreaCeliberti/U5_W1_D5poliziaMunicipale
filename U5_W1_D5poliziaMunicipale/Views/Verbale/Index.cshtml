@model IEnumerable<U5_W1_D5poliziaMunicipale.ViewModels.VerbaleViewModel>

@{
    ViewBag.Title = "Elenco Verbali";
}

<h2>Elenco Verbali</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Agente</th>
            <th>Data Violazione</th>
            <th>Data Trascrizione</th>
            <th>Indirizzo</th>
            <th>Importo Multa</th>
            <th>Decurtazione Punti</th>
            <th>Violazione</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var verbale in Model)
            {
                <tr>
                    <td>@verbale.NominativoAgente</td>
                    <td>@verbale.DataViolazione.ToString("dd/MM/yyyy")</td>
                    <td>@verbale.DataTrascrizione.ToString("dd/MM/yyyy")</td>
                    <td>@verbale.IndirizzoViolazione</td>
                    <td>@verbale.ImportoMulta.ToString("C")</td>
                    <td>@verbale.DecurtazionePunti</td>
                    <td>@(!string.IsNullOrEmpty(verbale.Violazione) ? verbale.Violazione : "-")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Nessun verbale presente</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Verbale" asp-action="Create">Nuovo Verbale</a>
